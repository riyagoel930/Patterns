#include<stdio.h>
int main(){
    int m,n;
    printf("Enter the no. of rows: ");
    scanf("%d",&n);
    
  for(int i=1;i<=n;i++)
  {
    m = i;
    for(int j=1;j<=i;j++)
    {
       printf("%d ", m);
      m += n-j;
     
    }
    printf("\n");
  }
  return 0;
}

OUTPUT:
Enter the no. of rows: 5
1 
2 6 
3 7 10 
4 8 11 13 
5 9 12 14 15 
